<div>
  <%# <p>Find me in app/views/home/index.html.erb</p> %>
  <%# <%= button_to "Make new Post", %>
  <div class="flex flex-col-reverse content-center" >
    <% @posts.each do |post| %>
      <div class="flex-1 mt-5 ">
        <h2 class="text-center text-2xl font-light ">
          <span>Author:</span>
          <%= post.author %> </h2>
        <div class="p-3">
          <p class="font-extralight text-left line-clamp-4 ">
            <%= post.content %>
          </p>
        </div>
        <div class="p-3 pt-0 divide-y-5 divide-x-4">
          <%= link_to 'Read more...', article_path(post), class:"text-red-400" %> </div>
        <div class="h-1 border-t-orange-50 border min-w-full"></div>
      </div>
      <%= link_to 'Make new Post', new_article_path, class:"bg-slate-700 fixed bottom-4 right-6  px-6 py-5 font-bold text-white rounded rounded-tr-3xl rounded-bl-3xl
  " %>
    <% end %>
  </div>
